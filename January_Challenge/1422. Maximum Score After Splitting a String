class Solution {
    public int maxScore(String s) {
        // first find all the ones
        int ones=0;
        int n=s.length();
        for(int i=0;i<n;i++){
            if(s.charAt(i)=='1')
            ones++;
        }
        // now max partition , go through each partition by moving i
        // till second last index coz substring cant be empty
        int res=0;
        int zeroes=0;
        for(int i=0;i<n-1;i++){
            if(s.charAt(i)=='0')
            zeroes++;
            else
            ones--;
            res=Math.max(res, ones+zeroes);
        }
        return res;
    }
}
